<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Thing #<%= @thing.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/things" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_thing/<%= @thing.id %>" class="btn btn-block btn-outline-secondary">
          Delete thing
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @thing.user_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@thing.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@thing.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit thing
    </h2>

    <form action="/modify_thing/<%= @thing.id %>"  method="post" >
      <div class="form-group">
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" class="form-control" value="<%= @thing.user_id %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update thing
      </button>
    </form>
  </div>
</div>

<hr>
