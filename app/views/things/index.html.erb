<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all things
      <% if session.fetch(:user_id) != nil%>
      <%=session.fetch(:user_id)%>
      <%end%>
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new thing
    </h2>

    <form action="/insert_thing" method="post">
      <div class="form-group">
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create thing
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @things.each do |thing| %>
      <tr>
        <td>
          <%= thing.id %>
        </td>

        <td>
          <%= thing.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(thing.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(thing.updated_at) %> ago
        </td>

        <td>
          <a href="/things/<%= thing.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
